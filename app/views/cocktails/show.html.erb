 <div class="banner" style="background-position: center ; background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('<%= cl_image_path @cocktail.photo.path, height: 300, width: 400, crop: :fill %>');">
          <div class="banner-content text-center">
            <h1><%= @cocktail.name %></h1>
          </div>
</div>

<div class="wrapper-show">
 <div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-1">
      <% if @cocktail.doses.any? %>
        <div class="list">
        <ul>
        <h3> Vos ingr√©dients </h3>
          <% @cocktail.doses.each do |dose| %>
            <% if dose.persisted? %>
              <li>
                <%= dose.description %> of <%= dose.ingredient.name %>
                <%= link_to dose_path(dose), method: :delete, data: { confirm: 'Are you sure?'} do %>
                  <i class="fa fa-times red"></i>
                <% end %>
              </li>
            <% end %>
          <% end %>
          <% end %>
          </ul>
        </div>
        </div>

    <div class="col-xs-12 col-sm-4">
      <div class="add text-center">
      <%= link_to 'Ajouter une dose', new_cocktail_dose_path(@cocktail), class: 'btn btn-info'%>
      </div>

      <div class="add text-center">

      <%= link_to 'Liste des cocktails', cocktails_path(@cocktail), class: 'btn btn-success'%>

      </div>
      </div>
    </div>

    </div>
  </div>
  </div>
</div>
