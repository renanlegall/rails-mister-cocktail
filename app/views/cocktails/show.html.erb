 <div class="container">
  <div class="row">
    <div class="col-md-6">
      <h1><%= @cocktail.name %></h1>
      <% if @cocktail.doses.any? %>
        <ul class="list-unstyled">
          <% @cocktail.doses.each do |dose| %>
            <% if dose.persisted? %>
              <li>
                <%= dose.description %> of <%= dose.ingredient.name %>
                <%= link_to dose_path(dose), method: :delete, data: { confirm: 'Are you sure?'} do %>
                  <i class="fa fa-times red"></i>
                <% end %>
              </li>
            <% end %>
          <% end %>
        </ul>
      <% end %>
      <div>
      <%= link_to 'Add a dose', new_cocktail_dose_path(@cocktail)%>
      </div>
      <div>
      <%= link_to 'List of cocktails', cocktails_path(@cocktail) %>
      </div>
    </div>
  </div>
</div>
