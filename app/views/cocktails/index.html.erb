<div class="container">
  <h2> List of Cocktails </h2>
  <div class="row text-center">
    <%= link_to 'Create a new Cocktail', new_cocktail_path, class: 'btn btn-primary'%>
  </div>

  <div class="row cards">
      <% @cocktails.each do |cocktail| %>
      <div class="col-md-3 col-xs-6">
        <% if cocktail.photo? %>
              <%= cl_image_tag cocktail.photo.path, width: 200, height: 300, crop: :fill %>
        <% end %>
          <%= link_to cocktail_path(cocktail) do %>
          <div class="card">
            <div class="cocktail-name text-center">
              <h4><%= cocktail.name %></h4>
            </div>
          </div>
          <% end %>
        </div>
      <% end %>
  </div>
</div>
